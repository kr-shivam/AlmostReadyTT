<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <EditText
        android:id="@+id/autocomplete_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:drawableLeft="@mipmap/ic_search_black_24dp"
        android:drawablePadding="10dp"
        android:hint="@string/search_place_here"
        android:textColorHint="#4f5f4f5f"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/write_text"


        android:maxLines="1" />

    <ImageView
        android:id="@+id/clearText"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/places_ic_clear"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerView"
        android:layout_below="@+id/autocomplete_tv"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical"/>


</RelativeLayout>