<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="left|fill_horizontal"
    android:orientation="horizontal">



    <ImageView
        android:id="@+id/ivMallIcon"
        android:layout_width="143dp"
        android:layout_height="119dp"
        android:paddingLeft="20dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/mall_ub" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMallTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:gravity="center_horizontal|center|clip_vertical"
            android:text="U.B. City Mall"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="18sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/rbMallRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="(81)"
                android:isIndicator="false"
                style="?android:attr/ratingBarStyleIndicator"
                android:numStars="5"
                android:rating="5"
                android:scaleX="0.5"
                android:scaleY="0.5"
                />

            <TextView
                android:id="@+id/number_rating"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="(34)" />


        </LinearLayout>

        <TextView
            android:id="@+id/tvMallDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:text="7.0 km" />

    </LinearLayout>
</LinearLayout>