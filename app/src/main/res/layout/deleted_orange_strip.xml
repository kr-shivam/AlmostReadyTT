<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_orange_dark"
    tools:showIn="@layout/content_main"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/offer_icon"
        android:layout_width="60dp"
        android:layout_height="40dp"

        android:adjustViewBounds="true"
        android:clickable="true"
        android:maxHeight="80dp"
        android:maxWidth="80dp"
        android:paddingLeft="3dp"
        android:src="@mipmap/ic_local_offer_black_24dp" />

    <ImageView
        android:id="@+id/apparel_icon"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@drawable/tshirt"
        />

    <ImageView
        android:id="@+id/electronics_icon"
        android:layout_width="60dp"
        android:layout_height="40dp"

        android:layout_weight="0.35"
        android:clickable="true"
        android:src="@mipmap/ic_laptop_black_24dp" />

    <ImageView
        android:id="@+id/rest_icon"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_weight="0.33"
        android:src="@mipmap/ic_restaurant_menu_black_24dp"
        />

    <ImageView
        android:id="@+id/edu_icon"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_weight="0.26"
        android:src="@mipmap/ic_library_books_black_24dp"
        />

    <ImageView
        android:id="@+id/more_icon"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:src="@mipmap/ic_more_horiz_black_24dp"
        />
</LinearLayout>